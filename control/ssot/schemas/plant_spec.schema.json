{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PlantSpec",
  "type": "object",
  "additionalProperties": false,
  "required": ["artifact_kind", "plant_id", "version", "states", "transitions", "artifact_contracts", "defaults"],
  "properties": {
    "artifact_kind": {"const": "plant_spec"},
    "plant_id": {"type": "string", "minLength": 1},
    "version": {"type": "string", "minLength": 1},
    "states": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name"],
        "properties": {"name": {"type": "string", "minLength": 1}}
      }
    },
    "transitions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["from", "to", "on"],
        "properties": {
          "from": {"type": "string"},
          "to": {"type": "string"},
          "on": {"type": "string"}
        }
      }
    },
    "artifact_contracts": {"type": "object"},
    "defaults": {"type": "object"}
  }
}
