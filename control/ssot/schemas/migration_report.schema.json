{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "control/ssot/schemas/migration_report.schema.json",
  "title": "Migration Report",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "artifact_kind",
    "run_id",
    "generated_at",
    "mode",
    "source_root",
    "target_root",
    "layout",
    "operations",
    "summary",
    "idempotent"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "0.1"
    },
    "artifact_kind": {
      "type": "string",
      "const": "migration_report"
    },
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "mode": {
      "type": "string",
      "enum": [
        "dry-run",
        "apply"
      ]
    },
    "source_root": {
      "type": "string",
      "minLength": 1
    },
    "target_root": {
      "type": "string",
      "minLength": 1
    },
    "layout": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "required_dirs",
        "directory_mappings",
        "file_mappings"
      ],
      "properties": {
        "required_dirs": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "directory_mappings": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "source",
              "target"
            ],
            "properties": {
              "source": {
                "type": "string",
                "minLength": 1
              },
              "target": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        },
        "file_mappings": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "target",
              "candidates"
            ],
            "properties": {
              "target": {
                "type": "string",
                "minLength": 1
              },
              "candidates": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              }
            }
          }
        }
      }
    },
    "operations": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "action",
          "status",
          "path"
        ],
        "properties": {
          "action": {
            "type": "string",
            "enum": [
              "ensure_dir",
              "migrate_dir",
              "migrate_file"
            ]
          },
          "status": {
            "type": "string",
            "enum": [
              "planned",
              "created",
              "copied",
              "skipped",
              "missing_source",
              "conflict",
              "error"
            ]
          },
          "path": {
            "type": "string",
            "minLength": 1
          },
          "source": {
            "type": "string"
          },
          "target": {
            "type": "string"
          },
          "note": {
            "type": "string"
          }
        }
      }
    },
    "summary": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "planned",
        "created",
        "copied",
        "skipped",
        "missing_source",
        "conflict",
        "error"
      ],
      "properties": {
        "planned": {
          "type": "integer",
          "minimum": 0
        },
        "created": {
          "type": "integer",
          "minimum": 0
        },
        "copied": {
          "type": "integer",
          "minimum": 0
        },
        "skipped": {
          "type": "integer",
          "minimum": 0
        },
        "missing_source": {
          "type": "integer",
          "minimum": 0
        },
        "conflict": {
          "type": "integer",
          "minimum": 0
        },
        "error": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "idempotent": {
      "type": "boolean"
    }
  }
}
