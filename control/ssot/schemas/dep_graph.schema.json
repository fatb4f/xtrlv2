{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "control/ssot/schemas/dep_graph.schema.json",
  "title": "Source Dependency Graph",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "artifact_kind",
    "ordering",
    "modules"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "0.1"
    },
    "artifact_kind": {
      "type": "string",
      "const": "dep_graph"
    },
    "ordering": {
      "type": "string",
      "const": "stable_lexicographic"
    },
    "modules": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "module",
          "path",
          "imports"
        ],
        "properties": {
          "module": {
            "type": "string",
            "minLength": 1
          },
          "path": {
            "type": "string",
            "minLength": 1
          },
          "imports": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
