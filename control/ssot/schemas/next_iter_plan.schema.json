{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NextIterPlan",
  "type": "object",
  "additionalProperties": false,
  "required": ["artifact_kind", "run_id", "iteration_id", "restart_mode", "next_base_ref", "carry_patch"],
  "properties": {
    "artifact_kind": {"const": "next_iter_plan"},
    "run_id": {"type": "string"},
    "iteration_id": {"type": "string"},
    "restart_mode": {
      "type": "string",
      "enum": ["REITERATE_FROM_CANDIDATE", "REITERATE_FROM_LAST_GOOD", "STOP"]
    },
    "next_base_ref": {"type": "string"},
    "carry_patch": {"type": "boolean"},
    "tighten": {"type": "object"}
  }
}
