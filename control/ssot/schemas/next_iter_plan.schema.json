{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NextIterPlan",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "artifact_kind",
    "run_id",
    "iteration_id",
    "restart_mode",
    "next_base_ref",
    "carry_patch",
    "meta"
  ],
  "properties": {
    "artifact_kind": {
      "const": "next_iter_plan"
    },
    "run_id": {
      "type": "string"
    },
    "iteration_id": {
      "type": "string"
    },
    "restart_mode": {
      "type": "string",
      "enum": [
        "REITERATE_FROM_CANDIDATE",
        "REITERATE_FROM_LAST_GOOD",
        "STOP"
      ]
    },
    "next_base_ref": {
      "type": "string"
    },
    "carry_patch": {
      "type": "boolean"
    },
    "tighten": {
      "type": "object"
    },
    "meta": {
      "$ref": "#/definitions/meta"
    }
  },
  "definitions": {
    "artifact_ref": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "path",
        "version"
      ],
      "properties": {
        "path": {
          "type": "string",
          "minLength": 1
        },
        "version": {
          "type": "string",
          "minLength": 1
        },
        "id": {
          "type": "string",
          "minLength": 1
        },
        "sha256": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "guard_spec": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "guard_id",
        "deny_decision",
        "deny_reason_code",
        "evidence_kinds"
      ],
      "properties": {
        "guard_id": {
          "type": "string",
          "minLength": 1
        },
        "guard_kind": {
          "type": "string",
          "enum": [
            "stop",
            "structural",
            "repairable",
            "advisory"
          ]
        },
        "predicate_ref": {
          "type": "string",
          "minLength": 1
        },
        "deny_decision": {
          "type": "string",
          "enum": [
            "DENY",
            "STOP"
          ]
        },
        "deny_reason_code": {
          "type": "string",
          "pattern": "^[A-Z0-9_]+$"
        },
        "evidence_kinds": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      }
    },
    "guard_eval": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "guard_id",
        "status"
      ],
      "properties": {
        "guard_id": {
          "type": "string",
          "minLength": 1
        },
        "status": {
          "type": "string",
          "enum": [
            "PASS",
            "FAIL",
            "SKIP"
          ]
        },
        "decision": {
          "type": "string",
          "enum": [
            "ALLOW",
            "DENY",
            "STOP"
          ]
        },
        "reason_codes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "evidence_refs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "policy_linkage",
        "requirements",
        "guards"
      ],
      "properties": {
        "policy_linkage": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "reason_codes_ref"
          ],
          "properties": {
            "reason_codes_ref": {
              "$ref": "#/definitions/artifact_ref"
            },
            "plant_spec_ref": {
              "$ref": "#/definitions/artifact_ref"
            },
            "guardrails_bundle_ref": {
              "$ref": "#/definitions/artifact_ref"
            },
            "control_strategy_ref": {
              "$ref": "#/definitions/artifact_ref"
            },
            "rank_policy_ref": {
              "$ref": "#/definitions/artifact_ref"
            },
            "pattern_catalog_ref": {
              "$ref": "#/definitions/artifact_ref"
            },
            "src_conventions_ref": {
              "$ref": "#/definitions/artifact_ref"
            }
          }
        },
        "requirements": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "required_evidence"
          ],
          "properties": {
            "required_evidence": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": []
            }
          }
        },
        "guards": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "spec",
            "eval"
          ],
          "properties": {
            "spec": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/guard_spec"
              },
              "default": []
            },
            "eval": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/guard_eval"
              },
              "default": []
            }
          }
        }
      }
    }
  }
}
