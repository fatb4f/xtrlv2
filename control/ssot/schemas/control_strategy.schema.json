{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ControlStrategy",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "artifact_kind",
    "strategy_id",
    "version",
    "meta",
    "loop_spine",
    "inputs",
    "modes",
    "state_resolution",
    "transition_policy",
    "tool_policy",
    "tick_emission"
  ],
  "properties": {
    "artifact_kind": {
      "const": "control_strategy"
    },
    "strategy_id": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "meta": {
      "$ref": "#/definitions/meta"
    },
    "loop_spine": {
      "type": "array",
      "minItems": 6,
      "items": {
        "type": "string",
        "enum": [
          "PRECHECK",
          "PLAN",
          "EXEC",
          "CHECK",
          "GATE",
          "PROMOTE",
          "ITERATE"
        ]
      }
    },
    "inputs": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "plant_spec_ref",
        "reason_codes_ref"
      ],
      "properties": {
        "plant_spec_ref": {
          "$ref": "#/definitions/artifact_ref"
        },
        "reason_codes_ref": {
          "$ref": "#/definitions/artifact_ref"
        },
        "guardrails_bundle_ref": {
          "$ref": "#/definitions/artifact_ref"
        },
        "rank_policy_ref": {
          "$ref": "#/definitions/artifact_ref"
        },
        "src_conventions_ref": {
          "$ref": "#/definitions/artifact_ref"
        },
        "pattern_catalog_ref": {
          "$ref": "#/definitions/artifact_ref"
        }
      }
    },
    "modes": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "WORK",
        "PROMOTE"
      ],
      "properties": {
        "WORK": {
          "$ref": "#/definitions/mode_profile"
        },
        "PROMOTE": {
          "$ref": "#/definitions/mode_profile"
        }
      }
    },
    "state_resolution": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "method",
        "required_signals",
        "tie_breaker",
        "unknown_handling",
        "emit_field"
      ],
      "properties": {
        "method": {
          "type": "string",
          "enum": [
            "rules",
            "evidence_map",
            "classifier",
            "hybrid"
          ]
        },
        "required_signals": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "tie_breaker": {
          "type": "string",
          "enum": [
            "highest_confidence",
            "prefer_latest",
            "manual"
          ]
        },
        "unknown_handling": {
          "type": "string",
          "enum": [
            "remain_unknown",
            "deny_transitions",
            "stop_run"
          ]
        },
        "emit_field": {
          "type": "string",
          "const": "state_resolution"
        }
      }
    },
    "transition_policy": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "guard_evaluation_order",
        "on_missing_evidence",
        "on_ambiguous_state",
        "record_denials_field"
      ],
      "properties": {
        "guard_evaluation_order": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "enum": [
              "stop",
              "structural",
              "repairable",
              "advisory"
            ]
          }
        },
        "on_missing_evidence": {
          "type": "string",
          "enum": [
            "DENY",
            "STOP",
            "SKIP",
            "ALLOW"
          ]
        },
        "on_ambiguous_state": {
          "type": "string",
          "enum": [
            "DENY",
            "STOP"
          ]
        },
        "record_denials_field": {
          "type": "string",
          "const": "transition_evaluation"
        }
      }
    },
    "tool_policy": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "argv_only",
        "allowed_action_kinds",
        "budgets",
        "sandbox"
      ],
      "properties": {
        "argv_only": {
          "type": "boolean",
          "const": true
        },
        "allowed_action_kinds": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        },
        "budgets": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "max_tool_calls_per_iter",
            "max_iterations"
          ],
          "properties": {
            "max_tool_calls_per_iter": {
              "type": "integer",
              "minimum": 0
            },
            "max_iterations": {
              "type": "integer",
              "minimum": 1
            },
            "max_diff_lines_total": {
              "type": "integer",
              "minimum": 0
            },
            "max_files_touched": {
              "type": "integer",
              "minimum": 0
            }
          }
        },
        "sandbox": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "allowed_paths_source",
            "forbidden_paths_source",
            "allowed_commands_source"
          ],
          "properties": {
            "allowed_paths_source": {
              "type": "string",
              "minLength": 1
            },
            "forbidden_paths_source": {
              "type": "string",
              "minLength": 1
            },
            "allowed_commands_source": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    },
    "tick_emission": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "required_artifacts",
        "require_decision_trace"
      ],
      "properties": {
        "required_artifacts": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        },
        "require_decision_trace": {
          "type": "boolean",
          "const": true
        }
      }
    },
    "invariants": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/invariant"
      }
    }
  },
  "definitions": {
    "artifact_ref": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "path",
        "version"
      ],
      "properties": {
        "path": {
          "type": "string",
          "minLength": 1
        },
        "version": {
          "type": "string",
          "minLength": 1
        },
        "id": {
          "type": "string",
          "minLength": 1
        },
        "sha256": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "guard_spec": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "guard_id",
        "deny_decision",
        "deny_reason_code",
        "evidence_kinds"
      ],
      "properties": {
        "guard_id": {
          "type": "string",
          "minLength": 1
        },
        "guard_kind": {
          "type": "string",
          "enum": [
            "stop",
            "structural",
            "repairable",
            "advisory"
          ]
        },
        "predicate_ref": {
          "type": "string",
          "minLength": 1
        },
        "deny_decision": {
          "type": "string",
          "enum": [
            "DENY",
            "STOP"
          ]
        },
        "deny_reason_code": {
          "type": "string",
          "pattern": "^[A-Z0-9_]+$"
        },
        "evidence_kinds": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      }
    },
    "guard_eval": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "guard_id",
        "status"
      ],
      "properties": {
        "guard_id": {
          "type": "string",
          "minLength": 1
        },
        "status": {
          "type": "string",
          "enum": [
            "PASS",
            "FAIL",
            "SKIP"
          ]
        },
        "decision": {
          "type": "string",
          "enum": [
            "ALLOW",
            "DENY",
            "STOP"
          ]
        },
        "reason_codes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "evidence_refs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "policy_linkage",
        "requirements",
        "guards"
      ],
      "properties": {
        "policy_linkage": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "reason_codes_ref"
          ],
          "properties": {
            "reason_codes_ref": {
              "$ref": "#/definitions/artifact_ref"
            },
            "plant_spec_ref": {
              "$ref": "#/definitions/artifact_ref"
            },
            "guardrails_bundle_ref": {
              "$ref": "#/definitions/artifact_ref"
            },
            "control_strategy_ref": {
              "$ref": "#/definitions/artifact_ref"
            },
            "rank_policy_ref": {
              "$ref": "#/definitions/artifact_ref"
            },
            "pattern_catalog_ref": {
              "$ref": "#/definitions/artifact_ref"
            },
            "src_conventions_ref": {
              "$ref": "#/definitions/artifact_ref"
            }
          }
        },
        "requirements": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "required_evidence"
          ],
          "properties": {
            "required_evidence": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": []
            }
          }
        },
        "guards": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "spec",
            "eval"
          ],
          "properties": {
            "spec": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/guard_spec"
              },
              "default": []
            },
            "eval": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/guard_eval"
              },
              "default": []
            }
          }
        }
      }
    },
    "mode_profile": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "policy_profile",
        "test_policy",
        "promotion_policy"
      ],
      "properties": {
        "policy_profile": {
          "type": "string",
          "minLength": 1
        },
        "test_policy": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "no_tests_collected_exit5"
          ],
          "properties": {
            "no_tests_collected_exit5": {
              "type": "string",
              "enum": [
                "SKIP",
                "DENY"
              ]
            }
          }
        },
        "promotion_policy": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "require_clean_repo",
            "deny_legacy_roots"
          ],
          "properties": {
            "require_clean_repo": {
              "type": "boolean"
            },
            "deny_legacy_roots": {
              "type": "boolean"
            }
          }
        }
      }
    },
    "invariant": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "level",
        "statement"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "level": {
          "type": "string",
          "enum": [
            "MUST",
            "SHOULD"
          ]
        },
        "statement": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}
