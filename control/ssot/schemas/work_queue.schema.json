{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WorkQueue",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "artifact_kind",
    "queue_id",
    "base_ref",
    "desired_state_id",
    "work_items"
  ],
  "properties": {
    "artifact_kind": {
      "const": "work_queue"
    },
    "queue_id": {
      "type": "string",
      "minLength": 1
    },
    "base_ref": {
      "type": "string",
      "minLength": 1
    },
    "desired_state_id": {
      "type": "string",
      "minLength": 1
    },
    "rank_policy_id": {
      "type": "string",
      "minLength": 1
    },
    "work_items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "work_item_id",
          "objective_slice",
          "pattern",
          "budgets",
          "policy",
          "priority"
        ],
        "properties": {
          "work_item_id": {
            "type": "string",
            "minLength": 1
          },
          "objective_slice": {
            "type": "string",
            "minLength": 1
          },
          "priority": {
            "type": "integer",
            "minimum": 0
          },
          "max_workers": {
            "type": "integer",
            "minimum": 1
          },
          "budgets": {
            "type": "object"
          },
          "policy": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "allowed_paths",
              "forbidden_paths",
              "allowed_commands"
            ],
            "properties": {
              "allowed_paths": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "forbidden_paths": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "allowed_commands": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "pattern": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "pattern_catalog_id": {
      "type": "string",
      "minLength": 1
    }
  }
}
