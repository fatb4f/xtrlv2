{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.local/schemas/src_conventions.schema.json",
  "title": "Source Conventions (Python)",
  "type": "object",
  "required": [
    "schema_version",
    "package_root",
    "public_api",
    "layers",
    "forbidden",
    "meta"
  ],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "string"
    },
    "package_root": {
      "type": "object",
      "required": [
        "path",
        "pattern"
      ],
      "additionalProperties": false,
      "properties": {
        "path": {
          "type": "string"
        },
        "pattern": {
          "type": "string"
        }
      }
    },
    "public_api": {
      "type": "object",
      "required": [
        "definition",
        "module"
      ],
      "additionalProperties": false,
      "properties": {
        "definition": {
          "type": "string",
          "enum": [
            "init_exports_only"
          ]
        },
        "module": {
          "type": "string"
        },
        "allow_star_import": {
          "type": "boolean"
        }
      }
    },
    "layers": {
      "type": "object",
      "required": [
        "map",
        "allow_imports"
      ],
      "additionalProperties": false,
      "properties": {
        "map": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "allow_imports": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "from",
              "to"
            ],
            "additionalProperties": false,
            "properties": {
              "from": {
                "type": "string"
              },
              "to": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "forbidden": {
      "type": "object",
      "required": [
        "new_top_level_roots",
        "cross_layer_imports",
        "relative_escape",
        "star_imports"
      ],
      "additionalProperties": false,
      "properties": {
        "new_top_level_roots": {
          "type": "boolean"
        },
        "cross_layer_imports": {
          "type": "boolean"
        },
        "relative_escape": {
          "type": "boolean"
        },
        "star_imports": {
          "type": "boolean"
        }
      }
    },
    "meta": {
      "$ref": "#/definitions/meta"
    }
  },
  "definitions": {
    "artifact_ref": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "path",
        "version"
      ],
      "properties": {
        "path": {
          "type": "string",
          "minLength": 1
        },
        "version": {
          "type": "string",
          "minLength": 1
        },
        "id": {
          "type": "string",
          "minLength": 1
        },
        "sha256": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "guard_spec": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "guard_id",
        "deny_decision",
        "deny_reason_code",
        "evidence_kinds"
      ],
      "properties": {
        "guard_id": {
          "type": "string",
          "minLength": 1
        },
        "guard_kind": {
          "type": "string",
          "enum": [
            "stop",
            "structural",
            "repairable",
            "advisory"
          ]
        },
        "predicate_ref": {
          "type": "string",
          "minLength": 1
        },
        "deny_decision": {
          "type": "string",
          "enum": [
            "DENY",
            "STOP"
          ]
        },
        "deny_reason_code": {
          "type": "string",
          "pattern": "^[A-Z0-9_]+$"
        },
        "evidence_kinds": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      }
    },
    "guard_eval": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "guard_id",
        "status"
      ],
      "properties": {
        "guard_id": {
          "type": "string",
          "minLength": 1
        },
        "status": {
          "type": "string",
          "enum": [
            "PASS",
            "FAIL",
            "SKIP"
          ]
        },
        "decision": {
          "type": "string",
          "enum": [
            "ALLOW",
            "DENY",
            "STOP"
          ]
        },
        "reason_codes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "evidence_refs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "policy_linkage",
        "requirements",
        "guards"
      ],
      "properties": {
        "policy_linkage": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "reason_codes_ref"
          ],
          "properties": {
            "reason_codes_ref": {
              "$ref": "#/definitions/artifact_ref"
            },
            "plant_spec_ref": {
              "$ref": "#/definitions/artifact_ref"
            },
            "guardrails_bundle_ref": {
              "$ref": "#/definitions/artifact_ref"
            },
            "control_strategy_ref": {
              "$ref": "#/definitions/artifact_ref"
            },
            "rank_policy_ref": {
              "$ref": "#/definitions/artifact_ref"
            },
            "pattern_catalog_ref": {
              "$ref": "#/definitions/artifact_ref"
            },
            "src_conventions_ref": {
              "$ref": "#/definitions/artifact_ref"
            }
          }
        },
        "requirements": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "required_evidence"
          ],
          "properties": {
            "required_evidence": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": []
            }
          }
        },
        "guards": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "spec",
            "eval"
          ],
          "properties": {
            "spec": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/guard_spec"
              },
              "default": []
            },
            "eval": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/guard_eval"
              },
              "default": []
            }
          }
        }
      }
    }
  }
}
