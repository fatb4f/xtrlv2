{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GateDecision",
  "type": "object",
  "additionalProperties": false,
  "required": ["artifact_kind", "run_id", "iteration_id", "decision", "reason_codes", "pointers"],
  "properties": {
    "artifact_kind": {"const": "gate_decision"},
    "run_id": {"type": "string"},
    "iteration_id": {"type": "string"},
    "decision": {"type": "string", "enum": ["PROMOTE", "DENY", "STOP"]},
    "reason_codes": {"type": "array", "items": {"type": "string"}},
    "pointers": {"type": "object"}
  }
}
