{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "control/ssot/schemas/helper_event.schema.json",
  "title": "Helper Created Event",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "artifact_kind",
    "event",
    "packet_id",
    "run_id",
    "base_ref",
    "base_sha",
    "helper_path",
    "helper_hash",
    "trigger_reason_code",
    "gate_decision_ref",
    "prompt_ref",
    "touched_paths",
    "diffstat"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "0.1"
    },
    "artifact_kind": {
      "type": "string",
      "const": "helper_event"
    },
    "event": {
      "type": "string",
      "const": "helper_created"
    },
    "packet_id": {
      "type": "string",
      "minLength": 1
    },
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "base_ref": {
      "type": "string",
      "minLength": 1
    },
    "base_sha": {
      "type": "string",
      "pattern": "^[a-f0-9]{7,40}$"
    },
    "helper_path": {
      "type": "string",
      "pattern": "^(?!/)(?!.*\\.\\.)[^\\n]+$"
    },
    "helper_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "trigger_reason_code": {
      "type": "string",
      "pattern": "^[A-Z0-9_]+$"
    },
    "gate_decision_ref": {
      "$ref": "#/definitions/artifact_ref"
    },
    "prompt_ref": {
      "$ref": "#/definitions/artifact_ref"
    },
    "touched_paths": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^(?!/)(?!.*\\.\\.)[^\\n]+$"
      }
    },
    "diffstat": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "files_changed",
        "lines_added",
        "lines_removed"
      ],
      "properties": {
        "files_changed": {
          "type": "integer",
          "minimum": 1
        },
        "lines_added": {
          "type": "integer",
          "minimum": 0
        },
        "lines_removed": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "patch_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    }
  },
  "definitions": {
    "artifact_ref": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "path",
        "sha256"
      ],
      "properties": {
        "path": {
          "type": "string",
          "minLength": 1
        },
        "sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "version": {
          "type": "string"
        }
      }
    }
  }
}
