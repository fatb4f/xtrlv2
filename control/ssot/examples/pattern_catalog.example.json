{
  "artifact_kind": "pattern_catalog",
  "version": "1.0",
  "patterns": {
    "fix": {
      "prompt_profile_id": "pp_fix_v1",
      "budgets": {
        "max_patch_lines": 200,
        "max_codex_minutes": 5
      },
      "policy": {
        "allowed_paths": [
          "src/",
          "tests/"
        ],
        "forbidden_paths": [
          ".git/",
          ".codex/",
          "state/"
        ],
        "allowed_commands": [
          "pytest -q",
          "python -m compileall ."
        ]
      },
      "deny_default_restart_class": "REPAIRABLE"
    },
    "refactor": {
      "prompt_profile_id": "pp_refactor_v1",
      "budgets": {
        "max_patch_lines": 150,
        "max_codex_minutes": 5
      },
      "policy": {
        "allowed_paths": [
          "src/"
        ],
        "forbidden_paths": [
          ".git/",
          ".codex/",
          "state/"
        ],
        "allowed_commands": [
          "pytest -q"
        ]
      },
      "deny_default_restart_class": "STRUCTURAL"
    }
  }
}
